<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="using:TransactionQL.DesktopApp.Controls"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
        x:Class="TransactionQL.DesktopApp.DataWizardWindow"
        Title="DataWizardWindow">
  <Panel>
    <Carousel Name="Pages">
      <Carousel.Items>
        <Panel>
          <!-- TODO: for each plugin, show selectable 'box' -->
          <Button Click="NextPage">Next</Button>
        </Panel>
        <StackPanel Spacing="20" Margin="20">
          <c:Dropzone FileDescription="transactions" FileTypes="*.csv"/>
          <Button HorizontalAlignment="Right" Click="NextPage">Next</Button>
        </StackPanel>
        <Panel>
          <c:Dropzone FileDescription="filters" FileTypes="*.tql" />
          <Button Click="NextPage">Next</Button>
        </Panel>
        <Panel>
          <c:Dropzone FileDescription="accounts" FileTypes="*accounts*.ldg" />
          <Button>Get started</Button>
        </Panel>
      </Carousel.Items>
    </Carousel>
  </Panel>
</Window>
